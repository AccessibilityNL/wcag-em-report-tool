{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "angular": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "camelcase": [
          "error"
        ],
        "comma-dangle": [
          "error",
          "always-multiline"
        ],
        "curly": [
          "error",
          "all"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "new-cap": [
          "error"
        ],
        "no-bitwise": [
          "error"
        ],
        "no-caller": [
          "error"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "vars-on-top": [
          "error"
        ]
    }
}
