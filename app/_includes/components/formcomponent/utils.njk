{% from "components/formcomponent/Checkboxgroup.njk" import Checkboxgroup %}
{% from "components/formcomponent/Text.njk" import Text %}
{% from "components/formcomponent/Textarea.njk" import Textarea %}
{% from "components/formcomponent/Select/index.njk" import Select %}

{% macro setInput(data) %}
  {% set type = data.type %}

  {% if type === "text" %}
    {{ Text(data) }}
  {% endif %}

  {% if type === "textarea" %}
    {{ Textarea(data) }}
  {% endif %}

  {% if type === "select" %}
    {{ Select(data) }}
  {% endif %}

  {% if type === "checkbox" %}
    {{ Checkboxgroup(data) }}
  {% endif %}
{% endmacro %}
